		# CSS
		echo "$copyright" > $version/css/mooRainbow.css
		$css $version/css/mooRainbow-uncompressed.css >> $version/css/mooRainbow.css
		echo "  Created $version/css/mooRainbow.css"

		# JavaScript
		echo "$copyright" > $version/js/mooRainbow.js
